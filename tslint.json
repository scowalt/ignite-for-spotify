{
	"defaultSeverity": "error",
	"extends": [
		"tslint:recommended"
	],
	"jsRules": {},
	"rules": {
		"ban-ts-ignore": true,
		"member-ordering": [true, {
			"order": "statics-first",
			"alphabetize": false // sequelize types must be in a non-alphabetical order to have the column order correct in the DB
			}],
		"curly": true,
		"indent": [true, "tabs"],
		"no-console": true,
		"no-require-imports": true,
		"no-any": false, // This will make it much less messy for me to type functions that return Promises whose output isn't needed
		"semicolon": [true, "always"],
		"whitespace": [true,
			"check-branch",
			"check-decl",
			"check-operator",
			"check-module",
			"check-separator",
			"check-rest-spread",
			"check-type",
			"check-typecast",
			// "check-type-operator", // I prefer the type operators without the whitespace
			"check-preblock",
			"check-postbrace"
		],
		"no-shadowed-variable": true,
		"triple-equals": true,
        "radix": false,
        "jsdoc-format": [true, "check-multiline-start"],
		"no-empty-interface": false, // Empty interfaces are helpful placeholders in case the interface needs to be expanded later
		"typedef": [
			true, // enable typedef for the following scenarios:
			"call-signature",
			// "arrow-call-signature", // this one isn't very helpful to enable
			"parameter",
			// "arrow-parameter", // can't be enabled due to spotify-web-api-node not exporting the necessary types
			"property-declaration",
			"variable-declaration",
			"member-variable-declaration",
			"object-destructuring",
			"array-destructuring"
		]
	},
	"rulesDirectory": []
}